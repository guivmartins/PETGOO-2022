<html>
   <head>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/minty/bootstrap.min.css">
      <title>Página de Inclusão</title>
   </head>
   <body style="background-image: url('https://i.imgur.com/y6TYPm2.png'); ">
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
         <a class="navbar-brand" href="#">PetGoo!</a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
            aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
               <li class="nav-item active">
                  <a class="nav-link" href="/">Inicio<span class="sr-only">(current)</span></a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/show">Cadastros</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/contact">Entre em Contato</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/busca">Buscar!</a>
               </li>
            </ul>
      </nav>
      </div>
      <br>
      <div class="container">
      <div class="jumbotron">
         <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
               <div class="panel-heading">
                  <div class="row">
                     <div class="col col-xs-6">
                        <h2 class="panel-title">Listagem de Cadastros</h2>
                     </div>
                     <div class="col col-xs-6 text-right">
                        <a href="/" class="btn btn-success a-btn-slide-text">
                        <span class="fa fa-plus-circle" aria-hidden="true"></span>
                        <span><strong>Cadastrar</strong></span></a>
                     </div>
                  </div>
               </div>
               <div class="panel-body">
                  <table class="table table-striped table-bordered table-list">
                     <thead>
                        <tr>
                           <td>Nome</td>
                           <td>Bairro</td>
                           <td>E-mail</td>
                           <td>Nome do Pet</td>
                           <td>Raça do Pet</td>
                           <td>Cor do Pet</td>
                           <th class="text-center"><em class="fa fa-cog"></em></th>
                        </tr>
                     </thead>
                     <tbody>
                        <% data.forEach(function(details) { %>
                        <tr>
                           </td>
                           <td>
                              <%= details.nome %>
                           </td>
                           <td>
                              <%= details.bairro %>
                           </td>
                           <td>
                              <%= details.email %>
                           </td>
                           <td>
                              <%= details.nomedopet %>
                           </td>
                           <td>
                              <%= details.racadopet %>
                           </td>
                           <td>
                              <%= details.cordopet %>
                           </td>
                           <td align="center">
                              <a href="/edit/<%= details._id %>" class="btn btn-info">
                              <span class="fa fa-pencil" aria-hidden="true"></span>
                              <span><strong>Editar</strong></span>
                              </a>
                              <a href="/delete/<%= details._id %>" class="btn btn-danger">
                              <span class="fa fa-trash" aria-hidden="true"></span>
                              <span><strong>Excluir</strong></span>
                              </a>
                           </td>
                        </tr>
                        <% }) %>
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </body>
</html>